@model IEnumerable<Category>

<div class="list-group">
    @foreach (var category in Model)
    {
        <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action @(category.Name==ViewBag.CurrentCategory ? "active":"")" asp-route-catName="@category.Name">@category.Name</a>
    }
</div>